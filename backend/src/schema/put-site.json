{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"type": "object",
	"properties": {
		"site": {
			"type": "string",
			"pattern": "^(https://)[\\w.-]+(?:\\.[\\w.-]+)+[\\w\\-._~:/?#[\\]@!$&'()*+,;=]+$",
			"maxLength": 2048
		},
		"selector": {
			"type": "string",
			"maxLength": 2048
		},
		"frequency": {
			"type": "string",
			"pattern": "^(NEVER|WEEKLY|SEMI-WEEKLY)$"
		},
		"options": {
			"type": "object",
			"properties": {
				"ignoreCss": {
					"type": "boolean"
				},
				"ignoreAttributes": {
					"type": "boolean"
				},
				"ignoreScripts": {
					"type": "boolean"
				}
			}
		}
	},
	"required": [
		"site"
	],
	"additionalProperties": false
}